<%- include("./_common/header.ejs", { title: "Profile", }); -%>
<%- include("./_common/navbar.ejs", { page: "PROFILE", }); -%>

<div class="container-fluid col-md-8 col-12 my-5">
  <div class="row g-3">
    <div class="offset-md-3 col-md-6 col-12">
      <h1 class="display-4 fw-bold m-0">
        Profile
      </h1>

      <div class="my-4"></div>

      <form action="/signin" method="post" class="needs-validation" novalidate>
        <div class="form-floating">
          <input type="text" class="form-control" id="username" name="username" placeholder="Username" required />

          <label for="username">Username</label>

          <div class="valid-feedback">
            Valid Username!
          </div>

          <div class="invalid-feedback">
            Invalid Username!
          </div>
        </div>

        <div class="my-4"></div>

        <div class="form-floating">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" required />

          <label for="password">Password</label>

          <div class="valid-feedback">
            Valid Password!
          </div>

          <div class="invalid-feedback">
            Invalid Password!
          </div>
        </div>

        <div class="my-4"></div>

        <div class="form-floating">
          <input type="text" class="form-control" id="role" name="role" placeholder="Role" required />

          <label for="name">Role</label>

          <div class="valid-feedback">
            Valid Role!
          </div>

          <div class="invalid-feedback">
            Invalid Role!
          </div>
        </div>

        <div class="my-4"></div>

        <div class="form-floating">
          <input type="text" class="form-control" id="name" name="name" placeholder="Name" required />

          <label for="name">Name</label>

          <div class="valid-feedback">
            Valid Name!
          </div>

          <div class="invalid-feedback">
            Invalid Name!
          </div>
        </div>

        <div class="my-4"></div>

        <div class="form-floating">
          <input type="text" class="form-control" id="surname" name="surname" placeholder="Surname" required />

          <label for="password">Surname</label>

          <div class="valid-feedback">
            Valid Surname!
          </div>

          <div class="invalid-feedback">
            Invalid Surname!
          </div>
        </div>

        <div class="my-4"></div>

        <div class="form-floating">
          <textarea class="form-control" id="bio" name="bio" placeholder="Bio" required></textarea>

          <label for="password">Bio</label>

          <div class="valid-feedback">
            Valid Bio!
          </div>

          <div class="invalid-feedback">
            Invalid Bio!
          </div>
        </div>

        <div class="my-4"></div>

        <div class="row row-cols-md-2 row-cols-1 g-3">
          <div class="col">
            <button type="submit" class="btn btn-lg btn-primary w-100" id="submit" name="submit">
              Update
            </button>
          </div>

          <div class="col">
            <button type="submit" class="btn btn-lg btn-danger w-100" id="submit" name="submit">
              Delete
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("./_common/footer.ejs"); -%>
